.navbar.navbar-fixed-top
  .navbar-inner
    .container-fluid
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-align-justify
      - if not user_signed_in?
        %a.brand{:href => '/'}= t 'app.description'
      - if user_signed_in?
        %a.brand{:href => '/', :title => t('app.description') }= t 'app.name'
        .nav-collapse.collapse
          %ul.nav{:role => "navigation"}
            %li= link_to raw("<i class=\"icon-book\">&nbsp;&nbsp;</i>#{t('menu.medical_histories')}"), medical_histories_path, "tabindex" => "-1"
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
                %i.icon-calendar
                =" #{t('menu.attention_times')}"
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to raw("<i class=\" icon-hand-up\">&nbsp;&nbsp;</i>#{t('menu.sub_menu.attention_times.assignment')}"), attention_times_setup_search_path, "tabindex" => "-1"
                %li= link_to raw("<i class=\"icon-th-list\">&nbsp;&nbsp;</i>#{t('menu.sub_menu.attention_times.my_attention_times')}"), attention_times_daily_attention_times_path, "tabindex" => "-1"
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
                %i.icon-signal=" #{t('menu.statistics')}"
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to raw("<i class=\" icon-signal\">&nbsp;&nbsp;</i>#{t('menu.sub_menu.statistics.simptoms')}"), statistics_setup_simptom_path, "tabindex" => "-1"
                %li= link_to raw("<i class=\"icon-signal\">&nbsp;&nbsp;</i>#{t('menu.sub_menu.statistics.diseases')}"), statistics_setup_disease_path, "tabindex" => "-1"
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
                %i.icon-wrench
                =" #{t('menu.administration')}"
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to raw("<i class=\"icon-user\">&nbsp;&nbsp;</i>#{t('menu.medicals')}"), medicals_path, "tabindex" => "-1"
                %li= link_to raw("<i class=\"icon-briefcase\">&nbsp;&nbsp;</i>#{t('menu.medical_specializations')}"), "/medical_specializations", "tabindex" => "-1"
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button"}
                %i.icon-wrench
                =" #{t('menu.users')}"
                %b.caret
              %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                %li
                  = link_to raw("<i class=\"icon-user\">&nbsp;&nbsp;</i>#{t('menu.managerUsers')}"), users_path, "tabindex" => "-1"
                %li= link_to raw("<i class=\"icon-briefcase\">&nbsp;&nbsp;</i>#{t('menu.confProfiles')}"), "/medical_specializations", "tabindex" => "-1"

          %ul.nav.pull-right
            %li#fat-menu.dropdown.open
              %ul.nav.pull-right
                %li.dropdown
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#", :role => "button", "id"=>"session_menu"}
                    %i.icon-user
                    = t :login_as
                    %b= current_user
                    %b.caret
                  %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                    %li
                      = link_to raw("<i class=\"icon-info-sign\">&nbsp;&nbsp;</i>#{t(:user_settings)}"), edit_user_registration_path, "tabindex" => "-1", :id => "settings"
                    %li.divider
                    %li
                      = link_to raw("<i class=\"icon-off\">&nbsp;&nbsp;</i>#{t(:sign_out)}"),"#myModal", "tabindex" => "-1", "data-toggle" =>"modal", :id => "sing_out"
