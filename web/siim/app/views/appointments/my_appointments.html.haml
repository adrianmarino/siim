- content_for :content do
  %legend='Mis Turnos'
  %table#my_appointments_list.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
    %thead.table-header
      %tr
        %th=translate_attribute :appointment, :date
        %th=translate_attribute :appointment, :patient
        %th=translate_attribute :appointment, :state
        %th.options= t :options
      %tbody
        - for an_appointment in @appointments
          %tr
            %td=an_appointment.time.strftime "%d/%m/%Y %H:%M"
            %td=an_appointment.patient
            %td=t "appointment.state.#{an_appointment.current_state}"
            %td.options
              .btn-group
                = link_to raw("<i class=\"icon-plus-sign\">&nbsp;#{t('appointment.action.attend')}</i>"), "#", :class => "btn"
                = link_to raw("<i class=\"icon-minus-sign\">&nbsp;#t('appointment.action.finalize')</i>"), "#", :class => "btn"
= render :file => 'layouts/application'