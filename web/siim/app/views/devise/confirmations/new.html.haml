- content_for :content do
  .session
    = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'well form-horizontal' }) do |f|
      %fieldset
        %legend= t :resend_confirmation_instructions
        = devise_error_messages!
        .control-group
          = f.label User.human_attribute_name(:email), :class => 'control-label'
          .controls= f.email_field :email
        .form-actions
          = f.submit t(:resend_confirmation_instructions), :class => "btn btn-primary"
          = render "devise/shared/links"
= render :file => 'layouts/application'
