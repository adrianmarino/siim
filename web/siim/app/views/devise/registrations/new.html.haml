- content_for :content do
  %h2= t (:create_user)
 
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|

   
    %table.panelTable.form-horizontal.margin
      %tr
        %td
          %div.control-group
            = f.label User.human_attribute_name(:first_name), :class => "control-label label-inline"
            = f.text_field :first_name
          %div.control-group
            = f.label User.human_attribute_name(:last_name), :class => "control-label label-inline"
            = f.text_field :last_name
          %div.control-group
            = f.label User.human_attribute_name(:dni), :class => "control-label label-inline upperCase"
            = f.text_field :dni
          %div.control-group
            = f.label User.human_attribute_name(:email), :class => "control-label label-inline"
            = f.email_field :email
          %div.control-group
            = f.label t(:cant_character_password), :class => "spamtext"
            = f.label User.human_attribute_name(:password), :class => "control-label label-inline"
            = f.password_field :password
          %div.control-group
            = f.label t(:password_confirmation), :class => "control-label label-inline"
            = f.password_field :password_confirmation
        %td
          %div
            = devise_error_messages!
      %tr
        %td
          %table.margin
            %tr
              %td
                %div= f.submit t(:sign_up), :class => "btn btn-inverse separationBtn"
              %td
                %div     
                  = link_to t(:cancel), new_session_path(resource_name), :class => "btn btn-inverse separationBtn"
 
= render :file => 'layouts/application'
