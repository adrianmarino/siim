- content_for :content do
  %h2= t :sign_up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    = devise_error_messages!
    %div
      = f.label User.human_attribute_name(:first_name)
      = f.text_field :first_name
    %div
      = f.label User.human_attribute_name(:last_name)
      = f.text_field :last_name
    %div
      = f.label User.human_attribute_name(:dni)
      = f.text_field :dni
    %div
      = f.label User.human_attribute_name(:email)
      = f.email_field :email
    %div
      = f.label User.human_attribute_name(:password)
      = f.password_field :password
    %div
      = f.label t(:password_confirmation)
      = f.password_field :password_confirmation
    %div= f.submit t(:sign_up), :class => "btn btn-primary"
  = render "devise/shared/links"
= render :file => 'layouts/application'
