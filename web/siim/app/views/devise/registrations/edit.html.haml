- content_for :content do
  .session_top
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'well form-horizontal' }) do |f|
      %fieldset
        %legend
          = t :edit
          = t 'activerecord.models.user'
        = devise_error_messages!
        .control-group
          = f.label User.human_attribute_name(:first_name), :class => 'control-label'
          .controls= f.text_field :first_name
        .control-group
          = f.label User.human_attribute_name(:last_name), :class => 'control-label'
          .controls= f.text_field :last_name
        .control-group
          = f.label User.human_attribute_name(:dni), :class => 'control-label'
          .controls= f.text_field :dni
        .control-group
          = f.label User.human_attribute_name(:email), :class => 'control-label'
          .controls= f.email_field :email
        .control-group
          = f.label User.human_attribute_name(:password), :class => 'control-label'
          .controls
            = f.password_field :password, :autocomplete => "off"
            %p.help-block= t :password_clarification
        .control-group
          = f.label t(:password_confirmation), :class => 'control-label'
          .controls= f.password_field :password_confirmation
        .control-group
          = f.label t(:current_password), :class => 'control-label'
          .controls
            = f.password_field :current_password
            %p.help-block= t :current_password_clarification
        .form-actions
          = back_button :back
          = f.submit  t(:update), :class => "btn btn-primary"
        %legend= t(:cancel_my_account)
        %p
          = t :unhappy
          = link_to t(:cancel_my_account), registration_path(resource_name), :data => { :confirm => t(:confirm) }, :method => :delete, :class => "btn"
= render :file => 'layouts/application'