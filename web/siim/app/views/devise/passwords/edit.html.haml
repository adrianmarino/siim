- content_for :content do
  %h2= t :change_your_password
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = f.hidden_field :reset_password_token
    
    %table.panelTable.form-horizontal.margin
      %tr
        %td
          %div
            = devise_error_messages!
      %tr
        %td
          %div.control-group
           
            = f.label t(:new_password), :class => "control-label label-inline"
            = f.password_field :password
      %tr
        %td
          %div.control-group
            = f.label  t(:confirm_new_password), :class => "control-label label-inline"
            = f.password_field :password_confirmation
            = f.label t(:cant_character_password), :class => "spamtext"
      %tr
        %td
          %table.margin
            %tr
              %td
                %div= f.submit t(:change_my_password), :class => "btn btn-inverse"
              %td
                %div     
                  = link_to t(:cancel), new_session_path(resource_name), :class => "btn btn-inverse separationBtn"
      
      %tr
        %td
= render :file => 'layouts/application'
