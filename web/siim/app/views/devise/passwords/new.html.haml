- content_for :content do
  .session_top
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'well form-horizontal' }) do |f|
      %fieldset
        %legend= t :forgot_your_password
        = devise_error_messages!
        .control-group
          = f.label User.human_attribute_name(:email), :class => 'control-label'
          .controls= f.email_field :email
        .form-actions
          = f.submit t(:send_me_reset_password_instructions), :class => "btn btn-primary"
          = render "devise/shared/links"
= render :file => 'layouts/application'
