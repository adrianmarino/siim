- content_for :content do
  %h2= t :sign_in

  - if flash[:error] or flash[:notice] or flash[:alert]
    = content_tag(:div, "Error: " + flash[:error], :id => "flash_error") if flash[:error]
    = content_tag(:div, "Notice: " + flash[:notice], :id => "flash_notice") if flash[:notice]
    = content_tag(:div, "Alert: " + flash[:alert], :id => "flash_alert") if flash[:alert]
    %br

  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    %div
      = f.label t(:login)
      = f.text_field :login
    %div
      = f.label User.human_attribute_name(:password)
      = f.password_field :password
    - if devise_mapping.rememberable?
      %div
        = f.label t(:remember_me), :class => 'label-inline'
        = f.check_box :remember_me
    %br
    %div= f.submit t(:sign_in), :class => "btn"
  = render "devise/shared/links"
